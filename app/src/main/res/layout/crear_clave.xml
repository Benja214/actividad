<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    tools:context=".CrearClave">

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#007BFF"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="Volver"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btnVolver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/etSitioWeb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sitio o aplicación"
            android:backgroundTint="#D1D1D1"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:drawableLeft="@drawable/ic_website"
            android:drawablePadding="10dp" />

        <EditText
            android:id="@+id/etUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Usuario"
            android:backgroundTint="#D1D1D1"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="10dp" />

        <EditText
            android:id="@+id/etClave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:backgroundTint="#D1D1D1"
            android:layout_marginBottom="12dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:padding="12dp"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="10dp" />

        <EditText
            android:id="@+id/etNotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notas adicionales"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:backgroundTint="#D1D1D1"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:drawableLeft="@drawable/ic_notes"
            android:drawablePadding="10dp" />

        <Button
            android:id="@+id/btnCreatePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear contraseña"
            android:backgroundTint="#007BFF"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:padding="12dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
